# Quantum Configuration Template
# Copy this file to your app's root directory and rename to .env.development or .env.production
# Update the values according to your environment

# ============================================================================
# OIDC Authentication Configuration
# ============================================================================
# Required for user authentication using OpenID Connect

# The URL of your OIDC identity provider (e.g., Keycloak, Auth0, Okta, Oracle IDCS)
VITE_OIDC_AUTHORITY="https://your-identity-provider.com"

# Your application's client ID registered with the identity provider
VITE_OIDC_CLIENT_ID="your-client-id"

# The URI to redirect to after successful login (must match registered redirect URI)
VITE_OIDC_REDIRECT_URI="http://localhost:4200/login/callback"

# The URI to redirect to after logout (optional)
VITE_OIDC_POST_LOGOUT_REDIRECT_URI="http://localhost:4200/"

# OAuth2 response type (default: "code" for authorization code flow)
VITE_OIDC_RESPONSE_TYPE="code"

# Space-separated list of OAuth2 scopes to request
# At minimum, include "openid profile email" for basic user information
VITE_OIDC_SCOPE="openid profile email"

# ============================================================================
# API Configuration
# ============================================================================
# Configure your backend API endpoints

# Base URL for your main API
VITE_API_BASE_URL="http://localhost:3000"

# ============================================================================
# Application Configuration
# ============================================================================
# General application settings

# Your application's display name
VITE_APP_NAME="Quantum App"

# Application version (optional)
VITE_APP_VERSION="1.0.0"
